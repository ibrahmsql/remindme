{
  "manifest_version": 2,
  "name": "Remind Me",
  "version": "1.1",
  "description": "Save your URLs/Notes to be reminded to you later!",
  "permissions": [
    "storage",
    "notifications",
    "tabs",
    "alarms",
    "contextMenus",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "applications": {
    "gecko": {
      "id": "remindme@pwish.dev",
      "strict_min_version": "57.0"
    }
  }
}